<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class: 'navbar-brand text-white' %>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to " Home", user_path(current_user.id), class: 'nav-link text-light fas fa-home' %>
              </li>
              <li class="nav-item">
                <%= link_to " Users", users_path, class: 'nav-link text-light fas fa-users' %>
              </li>
              <li class="nav-item">
                <%= link_to " Books", books_path, class: 'nav-link text-light fas fa-book-open' %>
              </li>
              <li class="nav-item">
                <%= link_to " logout", destroy_user_session_path, method: :delete, class: 'nav-link text-light fas fa-sign-out-alt' %>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to " Home", root_path, class: 'nav-link text-light fas fa-home' %>
              </li>
              <li class="nav-item">
                <%= link_to " About", home_about_path, class: 'nav-link text-light fas fa-link' %>
              </li>
              <li class="nav-item">
                <%= link_to " sign up", new_user_registration_path, class: 'nav-link text-light fas fa-user-plus' %>
              </li>
              <li class="nav-item">
                <%= link_to " login", new_user_session_path, class: 'nav-link text-light fas fa-sign-in-alt' %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>    
    <p id="notice"><%= flash[:notice] %></p>
    <% if user_signed_in? %>
      <div class="search-form">
        <div class="container mt-1">
          <div class="row">
            <div class="mx-auto">
              <%= form_tag(search_path, method: :get) do %>
                <%= text_field_tag 'word' %>
                <%= select_tag 'model', options_for_select([['User', '1'], ['Book', '2']]) %>
                <%= select_tag 'search', options_for_select([['完全一致', 'matchs'], ['前方一致', 'forward'], ['後方一致', 'backward'], ['部分一致', 'partical']]) %>
                <%= submit_tag '検索' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>    
    <%= yield %>
  </body>
</html>
